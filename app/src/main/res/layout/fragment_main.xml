<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:background="@color/blue">

    <Button
        android:id="@+id/b_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_jobs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:padding="1dp"
        android:background="#ddd">

        <Button
            android:id="@+id/b_block"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/borderlessButtonStyle"
            android:text="Run blocking" />

        <Button
            android:id="@+id/b_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/borderlessButtonStyle"
            android:text="MainScope" />

        <Button
            android:id="@+id/b_vm_scope"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/borderlessButtonStyle"
            android:text="VmScope" />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_dispatcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ll_jobs"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_dispatcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/switch_dispatcher"
        app:layout_constraintStart_toEndOf="@id/switch_dispatcher"
        app:layout_constraintTop_toTopOf="@id/switch_dispatcher"
        android:text="Dispatcher: Main"
        android:layout_marginStart="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>